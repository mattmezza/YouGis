<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentContainer"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.example.wfsclient.DrawView"
            android:id="@+id/drawView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnContainer"
            android:gravity="center"
            android:baselineAligned="false"
            android:layout_gravity="bottom">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addLayer"
                android:minWidth="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:maxHeight="32dp"
                android:gravity="center"
                android:background="#00000000"
                android:text="➕" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/removeLayer"
                android:minWidth="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:maxHeight="32dp"
                android:gravity="center"
                android:background="#00000000"
                android:text="➖" />

            <ImageView
                android:src="@drawable/legenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoLayer"
                android:minWidth="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:maxHeight="32dp"
                />

            <ImageView
                android:src="@drawable/operazioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/operations"
                android:minWidth="32dp"
                android:maxWidth="32dp"
                android:minHeight="32dp"
                android:maxHeight="32dp"
                 />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>